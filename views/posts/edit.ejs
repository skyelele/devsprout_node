<h1>Edit Post!</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
    
    <input type="text" name="post[title]" placeholder="Title" value="<%= post.title %>"></div>
    <div><input type="text" name="post[price]" placeholder="Price"></div>
    <div>
        <input type="file" accept="images/*" name="images" multiple />
        <div>
            <% post.images.forEach(function(image) { %>
               <img src="<%= image.url %>" width="100px" />
            <% }); %>
        </div>
    </div>
    <div><textarea name="post[description]" placeholder="description" value="<%= post.price %>"><%= post.description %></textarea></div>
    <div><input type="text" name="post[location]" placeholder="Location" value="<%= post.location %>"></div>
    
    <input type="submit">
</form>

